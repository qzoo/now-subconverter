{
    "version": 2,
    "github": {
        "silent": true
    },
    "builds": [
        {
            "src": "sub-web/**",
            "use": "@now/static"
        },
        {
            "src": "subconverter/subconverter.exe",
            "use": "now-static-bin",
            "config": {
                "port": 25500,
                "timeout": 1500,
                "includeFiles": [
                    "subconverter/**"
                ]
            }
        }
    ],
    "rewrites": [
    {
      "source": "/(js|css|fonts)/(.*)",
      "destination": "/sub-web/$1/$2"
    },
    {
      "source": "/",
      "destination": "/sub-web/index.html"
    },
    {
      "source": "/favicon.ico",
      "destination": "/sub-web/favicon.ico"
    },
    {
      "source": "/(.*)",
      "destination": "/subconverter/subconverter.exe"
    }
  ],
  "headers": [
    {
      "source": "/(js|css|fonts)/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    }
  ]
}
