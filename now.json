{
  "version": 2,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "sub-web/**",
      "use": "@vercel/static"
    },
    {
      "src": "subconverter/subconverter.exe",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "subconverter/**/*",
          "profiles/**/*.ini"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(js|css|fonts)/(.*)",
      "destination": "sub-web/$1/$2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/",
      "destination": "/sub-web/index.html"
    },
    {
      "source": "/favicon.ico",
      "destination": "/sub-web/favicon.ico"
    },
    {
      "source": "/(.*)",
      "destination": "/subconverter/subconverter.exe"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
